<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="phieu_nhap"
              language="java"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20">

    <property name="com.jaspersoft.studio.data.defaultdataadapter" value="phieu-nhap-kho-test1"/>

    <!-- Parameters -->
    <parameter name="supplierName" class="java.lang.String"/>
    <parameter name="importDate" class="java.util.Date"/>
    <parameter name="createdAt" class="java.util.Date"/>
    <parameter name="id" class="java.lang.String"/>

    <!-- Fields -->
    <field name="productSku" class="java.lang.String"/>
    <field name="productName" class="java.lang.String"/>
    <field name="importPrice" class="java.math.BigDecimal"/>
    <field name="quantity" class="java.lang.Integer"/>

    <!-- Tổng tiền -->
    <variable name="TOTAL_AMOUNT" class="java.math.BigDecimal" resetType="Report" calculation="Sum">
        <variableExpression><![CDATA[$F{importPrice} != null && $F{quantity} != null
            ? $F{importPrice}.multiply(new java.math.BigDecimal($F{quantity}))
            : java.math.BigDecimal.ZERO]]></variableExpression>
        <initialValueExpression><![CDATA[java.math.BigDecimal.ZERO]]></initialValueExpression>
    </variable>

    <!-- Title -->
    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="10" width="555" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="18" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[PHIẾU NHẬP KHO]]></text>
            </staticText>

            <textField>
                <reportElement x="0" y="50" width="270" height="18"/>
                <textElement>
                    <font fontName="Times New Roman" size="11" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Mã phiếu: " + $P{id}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="70" width="270" height="18"/>
                <textElement>
                    <font fontName="Times New Roman" size="11" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Nhà cung cấp: " + $P{supplierName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="285" y="50" width="270" height="18"/>
                <textElement textAlignment="Right">
                    <font fontName="Times New Roman" size="11" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Ngày nhập: " + new java.text.SimpleDateFormat("dd/MM/yyyy").format($P{importDate})]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="285" y="70" width="270" height="18"/>
                <textElement textAlignment="Right">
                    <font fontName="Times New Roman" size="11" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Ngày tạo: " + new java.text.SimpleDateFormat("dd/MM/yyyy").format($P{createdAt})]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column Header -->
    <columnHeader>
        <band height="25">
            <staticText>
                <reportElement mode="Opaque" x="0" y="0" width="90" height="25" backcolor="#EAD9C5"/>
                <box><pen lineWidth="0.8"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[Mã SP]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="90" y="0" width="250" height="25" backcolor="#EAD9C5"/>
                <box><pen lineWidth="0.8"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[Tên sản phẩm]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="340" y="0" width="60" height="25" backcolor="#EAD9C5"/>
                <box><pen lineWidth="0.8"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[SL]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="400" y="0" width="80" height="25" backcolor="#EAD9C5"/>
                <box><pen lineWidth="0.8"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[Giá nhập]]></text>
            </staticText>

            <staticText>
                <reportElement mode="Opaque" x="480" y="0" width="75" height="25" backcolor="#EAD9C5"/>
                <box><pen lineWidth="0.8"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[Thành tiền]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail -->
    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="90" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{productSku}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="90" y="0" width="250" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{productName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="340" y="0" width="60" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0">
                <reportElement x="400" y="0" width="80" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{importPrice}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0">
                <reportElement x="480" y="0" width="75" height="20"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="Times New Roman" size="10" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{importPrice}.multiply(new java.math.BigDecimal($F{quantity}))]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Summary -->
    <summary>
        <band height="120">
            <textField>
                <reportElement x="330" y="10" width="150" height="20"/>
                <textElement textAlignment="Right">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA["Tổng cộng: "]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0">
                <reportElement x="480" y="10" width="75" height="20"/>
                <textElement textAlignment="Right">
                    <font fontName="Times New Roman" size="11" isBold="true" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{TOTAL_AMOUNT}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="60" y="60" width="150" height="50"/>
                <textElement textAlignment="Center" verticalAlignment="Bottom">
                    <font fontName="Times New Roman" size="11" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[Bên xuất
(Ký, họ tên)]]></text>
            </staticText>

            <staticText>
                <reportElement x="340" y="60" width="150" height="50"/>
                <textElement textAlignment="Center" verticalAlignment="Bottom">
                    <font fontName="Times New Roman" size="11" pdfFontName="fonts/times.ttf" pdfEncoding="Identity-H" isPdfEmbedded="true"/>
                </textElement>
                <text><![CDATA[Bên nhập
(Ký, họ tên)]]></text>
            </staticText>
        </band>
    </summary>

</jasperReport>
